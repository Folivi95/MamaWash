@page
@model MamaWash.Pages.Beneficiaries.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Beneficiary</h4>
<hr />

@*if transaction fails*@
@if (Model.FailedAlert)
{
    <div class="alert alert-danger" role="alert">
        Transaction Failed
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Beneficiary.AccountNumber" class="control-label"></label>
                <input type="number" asp-for="Beneficiary.AccountNumber" class="form-control" />
                <span asp-validation-for="Beneficiary.AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Beneficiary.AccountName" class="control-label"></label>
                <input asp-for="Beneficiary.AccountName" class="form-control" />
                <span asp-validation-for="Beneficiary.AccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Beneficiary.Bank.Bank" class="control-label"></label>
                <select asp-for="Beneficiary.Bank.BankCode" class="form-control" asp-items="ViewBag.Banks"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
